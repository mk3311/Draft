@model Draft.Models.Team

@{
    ViewData["Title"] = "Create Team";
    var players = ViewData["Players"] as List<Draft.Models.Player>;
}

<h1>Create Team</h1>

<form asp-action="CreateTeam" method="post">
    <div class="form-group">
        <label asp-for="Name">Team Name:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
