@model Draft.Models.User

@{
    ViewData["Title"] = "My Profile";
}

<h2>My Profile</h2>

<div class="card">
    <div class="card-body">
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Username:</strong> @Model.Username</p>
        <a href="@Url.Action("EditProfile", "User")" class="btn btn-secondary mt-3">Edit Profile</a>
    </div>
</div>